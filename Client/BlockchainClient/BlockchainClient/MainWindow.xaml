<Window x:Class="BlockchainClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Blockchain Message Demo" Height="600" Width="900"
        Background="#F5F7FA">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="Blockchain Message Manager" 
                      FontSize="28" 
                      FontWeight="SemiBold"
                      Foreground="#1F2937"/>
            <TextBlock Text="Securely manage and update blockchain messages" 
                      FontSize="14" 
                      Foreground="#6B7280"
                      Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Current Message Section -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="8"
                BorderBrush="#E5E7EB"
                BorderThickness="1"
                Padding="24"
                Margin="0,0,0,20"
                Effect="{DynamicResource MaterialDesignShadowDepth1}">
            <StackPanel>
                <DockPanel LastChildFill="False" Margin="0,0,0,16">
                    <TextBlock Text="Current Message" 
                             FontSize="18" 
                             FontWeight="SemiBold"
                             Foreground="#1F2937"/>
                    <Button Content="Read Message" 
                            Click="ReadMessage_Click"
                            DockPanel.Dock="Right"/>
                </DockPanel>
                <Border Background="#F9FAFB" 
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="16">
                    <TextBlock x:Name="txtMessage" 
                             Text="Click 'Read Message' to view the current message"
                             TextWrapping="Wrap"
                             Foreground="#374151"/>
                </Border>
            </StackPanel>
        </Border>

        <!-- Update Message Section -->
        <Border Grid.Row="2" 
                Background="White" 
                CornerRadius="8"
                BorderBrush="#E5E7EB"
                BorderThickness="1"
                Padding="24"
                Effect="{DynamicResource MaterialDesignShadowDepth1}">
            <StackPanel>
                <TextBlock Text="Update Message" 
                          FontSize="18" 
                          FontWeight="SemiBold"
                          Foreground="#1F2937"
                          Margin="0,0,0,16"/>
                <TextBox x:Name="txtNewMessage" 
                         Height="100" 
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Margin="0,0,0,16"
                         Padding="12"
                         Background="#F9FAFB"
                         BorderBrush="#E5E7EB"
                         BorderThickness="1"/>
                <Button Content="Update Message" 
                        Click="UpdateMessage_Click"
                        HorizontalAlignment="Right"/>
            </StackPanel>
        </Border>

        <!-- Status Section -->
        <Border Grid.Row="3" 
                Background="White"
                BorderBrush="#E5E7EB"
                BorderThickness="1"
                CornerRadius="8"
                Margin="0,20,0,0"
                Padding="24"
                Effect="{DynamicResource MaterialDesignShadowDepth1}">
            <DockPanel>
                <TextBlock Text="Status Log" 
                          FontSize="16" 
                          FontWeight="SemiBold"
                          Foreground="#1F2937"
                          DockPanel.Dock="Top"
                          Margin="0,0,0,12"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="txtStatus"
                              TextWrapping="Wrap"
                              Foreground="#4B5563"/>
                </ScrollViewer>
            </DockPanel>
        </Border>
    </Grid>
</Window>