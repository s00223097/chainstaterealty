<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClientApp.Pages.HomePage"
             Title="Home">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <VerticalStackLayout Grid.Row="0" 
                            Padding="20" 
                            Spacing="20">
            <Label Text="Welcome to ChainState Realty"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
            
            <Button Text="Browse Properties"
                    Clicked="OnBrowsePropertiesClicked"
                    HorizontalOptions="Fill"/>
            
            <Button Text="My Investments"
                    Clicked="OnMyInvestmentsClicked"
                    HorizontalOptions="Fill"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>